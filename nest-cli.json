{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "/auth/proto/*.proto",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "/users/proto/*.proto",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "/plans/proto/*.proto",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "/email/template/*.ejs",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
